Dialogue: 0,0:01:33.16,0:01:36.20,Main,,0,0,160,,Làm thế nào để giảm giá trị của một kỹ nữ?
Dialogue: 0,0:01:36.95,0:01:41.21,Main,,0,0,0,,Nếu có bầu, sẽ mất hết giá trị.
Dialogue: 0,0:01:49.01,0:01:51.55,Main,,0,0,0,,Đó là khách điếm \Nđại nhân muốn tới phải không?
Dialogue: 0,0:01:56.89,0:01:59.77,Main,,0,0,0,,Vậy nô tì xin phép đi trước.
Dialogue: 0,0:02:06.36,0:02:07.40,Main,,0,0,0,,Ngươi đi luôn sao?
Dialogue: 0,0:02:08.19,0:02:12.20,Main,,0,0,0,,Chúng ta đang cải trang.\NNếu nô tì vào cùng đại nhân thì công cốc mất.
Dialogue: 0,0:02:12.78,0:02:14.16,Main,,0,0,0,,Cũng phải.
Dialogue: 0,0:02:14.86,0:02:15.95,Main,,0,0,0,,Vậy nô tì xin lui.
Dialogue: 0,0:02:23.58,0:02:24.87,Main,,0,0,0,,{\i1}Không sao cả.{\i}
Dialogue: 0,0:02:25.33,0:02:27.96,Main,,0,0,0,,{\i1}Mình có thể{\i}\N{\i1}nói câu đó mà không cảm thấy gì.{\i}
Dialogue: 0,0:02:36.97,0:02:39.97,Main,,0,0,0,,Chúc ngài tận hưởng buổi tối vui vẻ.
Dialogue: 0,0:03:03.91,0:03:07.71,Main,,0,0,0,,{\i1}Giấc mơ về ngày trước sao?{\i}\N{\i1}Không, là giấc mơ khi mình còn đỏ hỏn.{\i}
Dialogue: 0,0:03:12.96,0:03:15.17,Main,,0,0,0,,{\an8\i1}Có lẽ là do hôm qua mình nói về chuyện đó.{\i}
Dialogue: 0,0:03:15.17,0:03:16.43,Main,,0,0,0,,{\an8}Chào buổi sáng.
Dialogue: 0,0:03:18.60,0:03:20.60,Main,,0,0,0,,Chào buổi sáng, cha.
Dialogue: 0,0:03:22.64,0:03:26.10,Main,,0,0,0,,- Hôm nay con định làm gì?\N- Con chưa có kế hoạch gì.
Dialogue: 0,0:03:26.35,0:03:30.23,Main,,0,0,0,,Nếu vậy thì con ghé qua\NLục Thanh Quán thay ta nhé?
Dialogue: 0,0:03:32.11,0:03:33.03,Main,,0,0,0,,Được ạ.
Dialogue: 0,0:03:39.57,0:03:42.58,Main,,0,0,0,,Ô kìa, Miêu Miêu. Không phải làm việc hả?
Dialogue: 0,0:03:42.95,0:03:44.70,Main,,0,0,0,,Hôm nay muội được nghỉ.
Dialogue: 0,0:03:47.46,0:03:50.84,Main,,0,0,0,,Được nghỉ nhưng lại ghé qua tiệm thuốc hả?
Dialogue: 0,0:03:51.17,0:03:54.34,Main,,0,0,0,,Muội cũng tiện đường.\NMặc dù đó không phải lý do đến đây…
Dialogue: 0,0:03:54.34,0:03:56.30,Main,,0,0,0,,Đợi đó đã, Bạch Linh!
Dialogue: 0,0:03:56.30,0:03:58.72,Main,,0,0,0,,Con thấy không cần trao đổi thêm nữa đâu!
Dialogue: 0,0:03:58.97,0:04:01.18,Main,,0,0,0,,Ơ? Miêu Miêu!
Dialogue: 0,0:04:06.94,0:04:08.39,Main,,0,0,0,,Mừng muội trở về!
Dialogue: 0,0:04:08.39,0:04:10.44,Main,,0,0,0,,Nóng quá đó, đại tỉ Bạch Linh.
Dialogue: 0,0:04:10.44,0:04:13.78,Main,,0,0,0,,Tỷ đang thấy giá lạnh\Ntrước lời mắng mỏ của bà bà đây!
Dialogue: 0,0:04:13.78,0:04:17.49,Main,,0,0,0,,Ta còn chưa nói hết đâu! \NCon chọn chỗ nào?
Dialogue: 0,0:04:17.49,0:04:18.70,Main,,0,0,0,,Gì chứ?
Dialogue: 0,0:04:18.70,0:04:22.14,Main,,0,0,0,,{\i1}Mình cũng không rõ, nhưng có vẻ{\i}\N{\i1}đại tỉ Bạch Linh cũng khó khăn lắm.{\i}
Dialogue: 0,0:04:22.14,0:04:25.70,Main,,0,0,0,,Cứ chọn một chỗ đi!\NTại con không chịu rời khỏi đây đó.
Dialogue: 0,0:04:25.70,0:04:27.46,Main,,0,0,0,,Nên ta mới phải tìm mấy mối đó cho con!
Dialogue: 0,0:04:27.46,0:04:28.87,Main,,0,0,0,,Có ai khiến đâu!
Dialogue: 0,0:04:28.87,0:04:33.00,Main,,0,0,0,,- Bà bà lúc nào cũng ích kỷ như vậy!\N- Ý con nói ích kỷ là sao?
Dialogue: 0,0:04:33.75,0:04:36.80,Main,,0,0,0,,Ủa? Miêu Miêu đến đây à?
Dialogue: 0,0:04:36.80,0:04:38.68,Main,,0,0,0,,Con bé ở đây nãy giờ mà.
Dialogue: 0,0:04:38.68,0:04:40.47,Main,,0,0,0,,Con bé sang gian nhà phụ rồi hả?
Dialogue: 0,0:04:57.03,0:04:57.99,Main,,0,0,0,,Chào buổi sáng.
Dialogue: 0,0:05:00.82,0:05:03.91,Main,,0,0,0,,{\i1}Trước đây mình từng{\i}\N{\i1}bị đuổi ra vì cô ấy ghét mình lắm,{\i}
Dialogue: 0,0:05:04.19,0:05:06.82,Main,,0,0,0,,{\i1}nhưng giờ cô ấy{\i}\N{\i1}chẳng còn sức để làm vậy nữa.{\i}
Dialogue: 0,0:05:07.08,0:05:10.42,Main,,0,0,0,,{\i1}Cũng có thể cô ấy đã{\i}\N{\i1}quên cách giao tiếp như nào rồi.{\i}
Dialogue: 0,0:05:11.46,0:05:15.46,Main,,0,0,0,,{\i1}Bệnh tình của cô ấy đang trở nặng.{\i}\N{\i1}Những ký ức đã vụn vỡ thành từng mảnh.{\i}
Dialogue: 0,0:05:22.64,0:05:25.47,Main,,0,0,0,,{\i1}Thuốc của cha dù hiệu quả,{\i}
Dialogue: 0,0:05:25.47,0:05:27.77,Main,,0,0,0,,{\i1}nhưng đến giai đoạn này{\i}\N{\i1}thì không còn tác dụng nữa.{\i}
Dialogue: 0,0:05:28.77,0:05:33.02,Main,,0,0,0,,{\i1}Kể cả vậy, mình và cha{\i}\N{\i1}cũng chỉ biết mỗi cách điều trị này.{\i}
Dialogue: 0,0:05:36.52,0:05:39.45,Main,,0,0,0,,Vị khách đó lại đến nữa rồi.
Dialogue: 0,0:05:41.45,0:05:44.36,Main,,0,0,0,,Hắn cũng thính thật đó.
Dialogue: 0,0:05:44.92,0:05:46.33,Main,,0,0,0,,Gọi Mai Mai ra đi.
Dialogue: 0,0:05:48.16,0:05:52.08,Main,,0,0,0,,{\i1}Lục Thanh Quán hiện tại{\i}\N{\i1}là một kỹ viện có tiếng,{\i}
Dialogue: 0,0:05:52.08,0:05:53.46,Main,,0,0,0,,{\i1}nhưng khoảng hơn mười năm trước,{\i}
Dialogue: 0,0:05:53.46,0:05:56.46,Main,,0,0,0,,{\i1}từng có thời điểm{\i}\N{\i1}kỹ viện này chưa có tên tuổi gì.{\i}
Dialogue: 0,0:05:57.21,0:06:00.22,Main,,0,0,0,,{\i1}Người kỹ nữ này đã{\i}\N{\i1}tiếp khách trong những năm đó,{\i}
Dialogue: 0,0:06:00.22,0:06:02.76,Main,,0,0,0,,{\i1}và không may mắc phải bệnh giang mai.{\i}
Dialogue: 0,0:06:06.80,0:06:09.81,Main,,0,0,0,,{\i1}Thời điểm ông già đến Lục Thanh Quán,{\i}
Dialogue: 0,0:06:09.81,0:06:12.77,Main,,0,0,0,,{\i1}bệnh tình đã{\i}\N{\i1}phát triển đến giai đoạn ủ bệnh.{\i}
Dialogue: 0,0:06:13.44,0:06:16.86,Main,,0,0,0,,{\i1}Nếu biết được tình trạnh bệnh khi đó{\i}\N{\i1}thì ông ấy đã có thể chữa khỏi,{\i}
Dialogue: 0,0:06:16.86,0:06:19.98,Main,,0,0,0,,{\i1}nhưng đời nào các cô gái lại tin tưởng{\i}
Dialogue: 0,0:06:19.98,0:06:21.11,Main,,0,0,0,,{\i1}một người từng là thái giám{\i}
Dialogue: 0,0:06:21.11,0:06:23.61,Main,,0,0,0,,{\i1}bỗng dưng từ đâu đó xuất hiện.{\i}
Dialogue: 0,0:06:25.78,0:06:28.54,Main,,0,0,0,,{\i1}Họ phải tiếp khách thì mới được ăn.{\i}
Dialogue: 0,0:06:28.54,0:06:31.07,Main,,0,0,0,,{\i1}Đó là quy định của kỹ viện.{\i}
Dialogue: 0,0:06:31.07,0:06:35.12,Main,,0,0,0,,{\i1}Vài năm trước,{\i}\N{\i1}khi những vết phát ban xuất hiện trở lại{\i}
Dialogue: 0,0:06:35.12,0:06:37.82,Main,,0,0,0,,{\i1}thì khối u đã lan nhanh như ngọn lửa.{\i}
Dialogue: 0,0:06:41.88,0:06:45.18,Main,,0,0,0,,{\i1}Sau đó, người phụ nữ này{\i}\N{\i1}bị buộc phải sống trong gian nhà phụ này{\i}
Dialogue: 0,0:06:45.18,0:06:47.92,Main,,0,0,0,,{\i1}để không bị khách hàng bắt gặp.{\i}
Dialogue: 0,0:06:48.60,0:06:51.18,Main,,0,0,0,,{\i1}Một kỹ nữ không còn giá trị sử dụng.{\i}
Dialogue: 0,0:06:51.18,0:06:54.26,Main,,0,0,0,,{\i1}Ít ra cô ấy không bị ném xuống mương nước.{\i}
Dialogue: 0,0:06:58.02,0:07:02.31,Main,,0,0,0,,{\i1}Trong này bắt đầu nặng mùi rồi.{\i}\N{\i1}Mình sẽ đốt ít hương.{\i}
Dialogue: 0,0:07:20.96,0:07:24.08,Main,,0,0,0,,- Sao thế?\N- Đại tỉ bảo em nói lại.
Dialogue: 0,0:07:24.47,0:07:27.05,Main,,0,0,0,,Gã đeo kính kỳ quặc đó lại đến đây.
Dialogue: 0,0:07:27.05,0:07:29.22,Main,,0,0,0,,Nên tỉ không nên trở lại đó thì hơn.
Dialogue: 0,0:07:29.80,0:07:32.17,Main,,0,0,0,,Vậy sao. Tỉ hiểu rồi.
Dialogue: 0,0:07:42.65,0:07:45.86,Main,,0,0,0,,{\i1}Miễn là mình ở lại đây{\i}\N{\i1}thì sẽ không gặp phải ông ta.{\i}
Dialogue: 0,0:07:46.45,0:07:50.58,Main,,0,0,0,,{\i1}Một khách hàng của Lục Thanh Quán.{\i}\N{\i1}Một gương mặt quen thuộc trong nhiều năm.{\i}
Dialogue: 0,0:08:09.34,0:08:10.92,Main,,0,0,0,,{\i1}Đúng là{\i}
Dialogue: 0,0:08:11.47,0:08:13.14,Main,,0,0,0,,{\i1}nữ nhân ngu muội.{\i}
Dialogue: 0,0:08:23.36,0:08:26.86,Main,,0,0,0,,Em vất vả rồi!\NCuối cùng vị khách đó cũng đi.
Dialogue: 0,0:08:26.86,0:08:29.77,Main,,0,0,0,,Đại tỉ Mai Mai tiếp ông ấy à?
Dialogue: 0,0:08:29.77,0:08:31.53,Main,,0,0,0,,Cũng đâu còn ai khác.
Dialogue: 0,0:08:32.03,0:08:35.58,Main,,0,0,0,,Tốt quá rồi. Có vẻ\Nhôm nay đại tỉ đã khá hơn.
Dialogue: 0,0:08:36.79,0:08:39.37,Main,,0,0,0,,Ông ta lại ngỏ lời với em đó, Miêu Miêu.
Dialogue: 0,0:08:42.34,0:08:44.59,Main,,0,0,0,,Đại tỉ xử lý việc đó giỏi thật đấy.
Dialogue: 0,0:08:45.00,0:08:46.13,Main,,0,0,0,,Có gì đâu.
Dialogue: 0,0:08:46.13,0:08:49.47,Main,,0,0,0,,Chừng nào người đó vẫn trả đủ tiền\Nthì bà bà sẽ không nói gì đâu.
Dialogue: 0,0:08:49.88,0:08:54.06,Main,,0,0,0,,Cũng vì thế mà\Nbà bà cứ muốn em trở thành kỹ nữ.
Dialogue: 0,0:08:54.06,0:08:57.68,Main,,0,0,0,,Nếu không được tuyển vào cung làm,\Nchắc giờ em cũng bị bán luôn rồi.
Dialogue: 0,0:08:58.10,0:09:01.15,Main,,0,0,0,,Với nhiều người thì\Nđây là cơ hội cả đời mới có một đó.
Dialogue: 0,0:09:01.15,0:09:04.15,Main,,0,0,0,,Em có biết số lượng kỹ nữ\Nkhao khát điều đó
Dialogue: 0,0:09:04.15,0:09:06.15,Main,,0,0,0,,và được toại nguyện ít thế nào không?
Dialogue: 0,0:09:06.15,0:09:10.65,Main,,0,0,0,,Bà bà sẽ đá bay người đó ngay,\Nmiễn là số bạc đủ nặng.
Dialogue: 0,0:09:11.57,0:09:14.22,Main,,0,0,0,,Bà ấy đang tích tiền đò\Nđể lên thiên đường mà.
Dialogue: 0,0:09:14.22,0:09:15.62,Main,,0,0,0,,Biết làm sao được.
Dialogue: 0,0:09:18.75,0:09:22.71,Main,,0,0,0,,Tỉ cũng đã đến độ tuổi\Nphải suy nghĩ cho giai đoạn tiếp theo rồi.
Dialogue: 0,0:09:22.71,0:09:24.59,Main,,0,0,0,,{\i1}Tỉ ấy vẫn chưa đến 30 tuổi,{\i}
Dialogue: 0,0:09:24.59,0:09:27.71,Main,,0,0,0,,{\i1}nhưng cũng đã đến độ tuổi nghỉ làm kỹ nữ.{\i}
Dialogue: 0,0:09:28.80,0:09:30.50,Main,,0,0,0,,Sao tỉ không tự ra riêng?
Dialogue: 0,0:09:32.09,0:09:34.10,Main,,0,0,0,,Chỉ một thời gian ngắn nữa thôi…
Dialogue: 0,0:09:40.14,0:09:43.56,Main,,0,0,0,,Tỉ muốn tiếp tục làm ở đây\Nthêm một thời gian ngắn nữa.
Dialogue: 0,0:09:45.27,0:09:47.73,Main,,0,0,0,,{\i1}Mình không hiểu được{\i}
Dialogue: 0,0:09:47.73,0:09:49.57,Main,,0,0,0,,{\i1}cảm giác của đại tỉ Mai Mai.{\i}
Dialogue: 0,0:09:50.28,0:09:52.86,Main,,0,0,0,,{\i1}Nếu thứ đó gọi là tình yêu,{\i}
Dialogue: 0,0:09:52.86,0:09:56.44,Main,,0,0,0,,{\i1}mình càng không muốn nghĩ nhiều về nó.{\i}
Dialogue: 0,0:10:05.25,0:10:07.63,Main,,0,0,0,,{\i1}Mình đã bỏ lại những cảm xúc đó{\i}
Dialogue: 0,0:10:07.63,0:10:11.80,Main,,0,0,0,,{\i1}bên trong cơ thể{\i}\N{\i1}của người phụ nữ đã sinh ra mình.{\i}
Dialogue: 0,0:10:14.14,0:10:16.43,Main,,0,0,0,,Tỉ kỳ lưng cho em nhé?\NLâu rồi không làm vậy.
Dialogue: 0,0:10:16.71,0:10:19.97,Main,,0,0,0,,- Không cần đâu.\N- Ổn mà!
Dialogue: 0,0:10:22.39,0:10:24.65,Main,,0,0,0,,Lâu rồi chúng ta không kỳ lưng cho nhau!
Dialogue: 0,0:10:24.65,0:10:25.90,Main,,0,0,0,,Cứ để tỉ ấy làm đi.
Dialogue: 0,0:10:26.31,0:10:29.25,Main,,0,0,0,,Còn lâu nữa muội mới lại được về đây mà.
Dialogue: 0,0:10:31.69,0:10:35.28,Main,,0,0,0,,{\an8}Được các tỉ phục vụ rồi thì\Nđừng quên dẫn về mấy khách sộp nhé!
Dialogue: 0,0:10:51.26,0:10:55.84,Main,,0,0,0,,{\i1}Không ngờ nơi gặp mặt đó lại có{\i}\N{\i1}mấy hình thức phục vụ giống phố thanh lâu.{\i}
Dialogue: 0,0:10:56.84,0:10:59.47,Main,,0,0,0,,{\i1}Mình đâu có đến để mua mấy thứ đó đâu.{\i}
Dialogue: 0,0:11:13.70,0:11:15.45,Main,,0,0,0,,Dược sư, nói chuyện chút nhé?
Dialogue: 0,0:11:16.16,0:11:17.20,Main,,0,0,0,,Vâng.
Dialogue: 0,0:11:17.82,0:11:19.74,Main,,0,0,0,,Uống cùng Thủy Liên bà bà nhé.
Dialogue: 0,0:11:19.74,0:11:21.86,Main,,0,0,0,,Quà từ kẻ quái gở gửi cho ngươi.
Dialogue: 0,0:11:23.50,0:11:25.16,Main,,0,0,0,,Kẻ quái gở?
Dialogue: 0,0:11:25.62,0:11:28.08,Main,,0,0,0,,- Đa tạ đại nhân.\N- Không có gì.
Dialogue: 0,0:11:28.08,0:11:30.22,Main,,0,0,0,,Vậy nô tì xin phép trở lại làm việc.
Dialogue: 0,0:11:39.85,0:11:41.64,Main,,0,0,0,,Ôi trời đất.
Dialogue: 0,0:11:44.18,0:11:46.64,Main,,0,0,0,,Hôm nay chúng ta sẽ ăn chay.
Dialogue: 0,0:11:46.64,0:11:49.69,Main,,0,0,0,,Vậy nên đừng ăn\Ncác loại thịt và cá nhé, Tiểu Miêu.
Dialogue: 0,0:11:52.48,0:11:54.15,Main,,0,0,0,,Chúng ta đang nghỉ tay nhưng
Dialogue: 0,0:11:54.15,0:11:56.32,Main,,0,0,0,,không có nghĩa\Nngươi có thể lơ đễnh như thế.
Dialogue: 0,0:11:57.36,0:11:59.32,Main,,0,0,0,,Ăn chay phải không ạ.
Dialogue: 0,0:11:59.32,0:12:00.33,Main,,0,0,0,,{\i1}Thôi xong.{\i}
Dialogue: 0,0:12:00.33,0:12:04.33,Main,,0,0,0,,{\i1}Mình cứ nghĩ nếu lao vào làm việc{\i}\N{\i1}thì sẽ gạt được chuyện đó ra khỏi đầu.{\i}
Dialogue: 0,0:12:07.62,0:12:09.04,Main,,0,0,0,,Với lại,
Dialogue: 0,0:12:10.34,0:12:13.54,Main,,0,0,0,,cũng không được phép\Ngiấu các loại thảo dược lạ trong tủ đâu.
Dialogue: 0,0:12:15.17,0:12:16.63,Main,,0,0,0,,{\i1}Không qua mắt nổi bà ấy.{\i}
Dialogue: 0,0:12:16.63,0:12:20.09,Main,,0,0,0,,Nếu không có chỗ để,\Nngươi có thể xin phép thiếu gia Nhâm Thị
Dialogue: 0,0:12:20.09,0:12:22.92,Main,,0,0,0,,để sử dụng một trong những phòng trống.
Dialogue: 0,0:12:23.26,0:12:25.56,Main,,0,0,0,,Không, nô tì không thể\Ndùng phòng cho tầng lớp cao quý
Dialogue: 0,0:12:25.56,0:12:27.69,Main,,0,0,0,,để làm kho dược liệu được.
Dialogue: 0,0:12:28.10,0:12:31.06,Main,,0,0,0,,Tiểu Miêu, trông ngươi có vẻ bất cần,
Dialogue: 0,0:12:31.06,0:12:33.65,Main,,0,0,0,,nhưng thực ra\Nngươi rất để ý đến thân phận mình.
Dialogue: 0,0:12:33.65,0:12:36.90,Main,,0,0,0,,Nô tì sinh ra từ tầng lớp thấp hèn.\NRiêng việc nô tì
Dialogue: 0,0:12:36.90,0:12:39.99,Main,,0,0,0,,được ở một nơi như này đã rất hiếm có rồi.
Dialogue: 0,0:12:40.37,0:12:41.66,Main,,0,0,0,,Cũng phải.
Dialogue: 0,0:12:42.15,0:12:45.58,Main,,0,0,0,,Nhưng không phải vì ai đó\Nđược sinh ra trong tầng lớp cao quý
Dialogue: 0,0:12:45.58,0:12:48.67,Main,,0,0,0,,mà họ trở thành\Nnhững người hoàn toàn khác biệt.
Dialogue: 0,0:12:49.46,0:12:51.33,Main,,0,0,0,,Đâu ai biết được
Dialogue: 0,0:12:51.33,0:12:54.50,Main,,0,0,0,,cuộc đời sẽ ném cho mình những gì đâu.
Dialogue: 0,0:12:54.50,0:12:58.13,Main,,0,0,0,,Dựa vào tầng lớp để phân biệt\Nthì thật lãng phí.
Dialogue: 0,0:12:59.34,0:13:00.64,Main,,0,0,0,,Bà nghĩ vậy sao?
Dialogue: 0,0:13:00.64,0:13:02.85,Main,,0,0,0,,Phải.
Dialogue: 0,0:13:02.85,0:13:06.98,Main,,0,0,0,,Rồi, trở lại làm việc thôi.\NGiúp ta làm ít việc vặt nhé?
Dialogue: 0,0:13:07.98,0:13:11.48,Main,,0,0,0,,Xin thứ lỗi! Nô tì đến lấy dược liệu.
Dialogue: 0,0:13:11.48,0:13:14.39,Main,,0,0,0,,Được. Đợi chút nhé.
Dialogue: 0,0:13:20.11,0:13:24.41,Main,,0,0,0,,{\i1}Nơi này không hề giống y phòng{\i}\N{\i1}ở hậu cung do lão lang băm quản lý.{\i}
Dialogue: 0,0:13:24.99,0:13:28.25,Main,,0,0,0,,{\i1}Nơi này gần Bộ Binh nên{\i}\N{\i1}họ phải chữa trị chấn thương rất nhiều.{\i}
Dialogue: 0,0:13:30.71,0:13:33.92,Main,,0,0,0,,{\i1}Mình yêu mùi hương{\i}\N{\i1}làm lan tỏa vị đắng trong miệng này!{\i}
Dialogue: 0,0:13:34.42,0:13:37.11,Main,,0,0,0,,{\i1}Không biết trong tủ đựng những gì nhỉ?{\i}
Dialogue: 0,0:13:37.42,0:13:40.66,Main,,0,0,0,,{\i1}Mình muốn càn quét toàn bộ nơi này…{\i}
Dialogue: 0,0:13:41.38,0:13:44.01,Main,,0,0,0,,{\i1}Không, không được! Dừng lại ngay!{\i}
Dialogue: 0,0:13:44.26,0:13:45.60,Main,,0,0,0,,Ngươi đang làm gì đó?
Dialogue: 0,0:13:49.23,0:13:50.85,Main,,0,0,0,,{\i1}Là cô gái lần trước…{\i}
Dialogue: 0,0:13:52.85,0:13:54.98,Main,,0,0,0,,Tôi chỉ đang chờ lấy dược liệu thôi.
Dialogue: 0,0:13:56.52,0:13:57.98,Main,,0,0,0,,Thúy Linh!
Dialogue: 0,0:13:59.57,0:14:00.78,Main,,0,0,0,,Cô đến rồi à?
Dialogue: 0,0:14:01.57,0:14:03.95,Main,,0,0,0,,Tôi đến lấy thuốc dự trữ cho doanh trại.
Dialogue: 0,0:14:03.95,0:14:05.27,Main,,0,0,0,,Ừ.
Dialogue: 0,0:14:08.75,0:14:10.70,Main,,0,0,0,,{\i1}Doanh trại sao?{\i}
Dialogue: 0,0:14:11.21,0:14:15.67,Main,,0,0,0,,{\i1}Phải rồi, lần trước{\i}\N{\i1}mình gặp cô ta ở gần Bộ Binh.{\i}
Dialogue: 0,0:14:16.59,0:14:20.47,Main,,0,0,0,,{\i1}Có lẽ cô ấy có mùi dược liệu{\i}\N{\i1}vì làm việc trong Bộ Binh.{\i}
Dialogue: 0,0:14:24.14,0:14:27.43,Main,,0,0,0,,{\i1}Mà sao cô ta lại ghét mình thế nhỉ?{\i}
Dialogue: 0,0:14:27.43,0:14:29.47,Main,,0,0,0,,Cô còn cần gì khác không?
Dialogue: 0,0:14:29.47,0:14:31.30,Main,,0,0,0,,Không còn gì khác.
Dialogue: 0,0:14:33.60,0:14:36.69,Main,,0,0,0,,Với vị trí đó, cô ấy đâu cần\Nlàm công việc của cung nữ…
Dialogue: 0,0:14:37.77,0:14:40.90,Main,,0,0,0,,Ấy, không có gì.\NTôi lấy dược liệu cho cô ngay!
Dialogue: 0,0:14:47.16,0:14:48.87,Main,,0,0,0,,{\i1}Dược liệu gì đây nhỉ?{\i}
Dialogue: 0,0:14:53.12,0:14:54.45,Main,,0,0,0,,Liếm!
Dialogue: 0,0:14:55.83,0:14:57.54,Main,,0,0,0,,{\i1}Bột khoai tây?{\i}
Dialogue: 0,0:14:57.54,0:15:00.13,Main,,0,0,0,,{\i1}Thứ này dành cho Nhâm Thị đại nhân phải không?{\i}
Dialogue: 0,0:15:00.51,0:15:04.63,Main,,0,0,0,,{\i1}Giờ nghĩ lại, xung quanh Nhâm Thị đại nhân{\i}\N{\i1}có nhiều bí ẩn thật đó.{\i}
Dialogue: 0,0:15:04.63,0:15:09.14,Main,,0,0,0,,{\i1}Như việc đại nhân nhận nhiệm vụ{\i}\N{\i1}đều đặn hai lần một tháng.{\i}
Dialogue: 0,0:15:09.93,0:15:12.64,Main,,0,0,0,,{\i1}Trước ngày đó, đại nhân ngâm mình rất lâu{\i}
Dialogue: 0,0:15:12.64,0:15:14.67,Main,,0,0,0,,{\i1}còn đốt cả hương rồi mới ra ngoài.{\i}
Dialogue: 0,0:15:15.02,0:15:16.60,Main,,0,0,0,,{\i1}Cũng như việc ăn chay vậy.{\i}
Dialogue: 0,0:15:17.31,0:15:18.77,Main,,0,0,0,,{\i1}Giống với nghi lễ tẩy trần.{\i}
Dialogue: 0,0:15:19.31,0:15:21.89,Main,,0,0,0,,{\i1}Thái giám cũng{\i}\N{\i1}có thể thực hiện nghi lễ sao?{\i}
Dialogue: 0,0:15:22.90,0:15:25.99,Main,,0,0,0,,{\i1}Nếu là tầng lớp cao quý{\i}\N{\i1}thì không có gì lạ.{\i}
Dialogue: 0,0:15:25.99,0:15:28.70,Main,,0,0,0,,{\i1}Nhưng sao người như vậy{\i}\N{\i1}lại trở thành thái giám chứ?{\i}
Dialogue: 0,0:15:28.70,0:15:32.16,Main,,0,0,0,,{\i1}Có khi nào Nhâm Thị đại nhân{\i}\N{\i1}cũng bị Hoàng Thái Hậu quá cố{\i}
Dialogue: 0,0:15:32.16,0:15:35.96,Main,,0,0,0,,{\i1}ép làm thái giám không?{\i}
Dialogue: 0,0:15:36.62,0:15:38.35,Main,,0,0,0,,{\i1}Giống cha mình.{\i}
Dialogue: 0,0:15:39.67,0:15:43.63,Main,,0,0,0,,Cha nuôi của cô ấy từng là\Nmột thái giám và cũng là thái y.
Dialogue: 0,0:15:43.63,0:15:46.22,Main,,0,0,0,,Nếu cô ấy được dạy dỗ\Nbởi người từng là thái y,
Dialogue: 0,0:15:46.22,0:15:48.80,Main,,0,0,0,,thì việc cô ấy\Nhiểu biết như vậy cũng hợp lý.
Dialogue: 0,0:15:49.26,0:15:52.28,Main,,0,0,0,,- Nhưng ông ta từng là thái giám sao?\N- Phải.
Dialogue: 0,0:15:52.28,0:15:56.06,Main,,0,0,0,,Thần không nghĩ ra thái y nào\Nxuất sắc đến vậy mà từng là thái giám…
Dialogue: 0,0:16:02.94,0:16:05.31,Main,,0,0,0,,Xin thứ lỗi.
Dialogue: 0,0:16:07.66,0:16:10.99,Main,,0,0,0,,Chúng ta bàn tiếp chuyện lần trước nhé?
Dialogue: 0,0:16:18.83,0:16:23.05,Main,,0,0,0,,Có vẻ ngài đã\Nlàm ra một chuyện vô cùng tồi tệ.
Dialogue: 0,0:16:23.05,0:16:24.71,Main,,0,0,0,,Nói vậy thì bất lịch sự quá!
Dialogue: 0,0:16:24.71,0:16:27.38,Main,,0,0,0,,Ta cũng không muốn bị nói như vậy mà.
Dialogue: 0,0:16:27.38,0:16:30.93,Main,,0,0,0,,Ta đã mất hơn mười năm\Nđể thuyết phục được bà già đó.
Dialogue: 0,0:16:30.93,0:16:35.89,Main,,0,0,0,,Nên hãy nghĩ xem ta đã choáng thế nào\Nkhi biết đã có người mang cô ấy đi mất!
Dialogue: 0,0:16:36.98,0:16:39.10,Main,,0,0,0,,Vậy ngài muốn lấy lại "món quà" của mình?
Dialogue: 0,0:16:39.10,0:16:42.48,Main,,0,0,0,,Ta sẽ trả bất cứ giá nào ngài muốn.
Dialogue: 0,0:16:42.48,0:16:45.78,Main,,0,0,0,,Ta không muốn phạm phải\Nsai lầm giống lần trước nữa.
Dialogue: 0,0:16:47.11,0:16:48.45,Main,,0,0,0,,Nếu ta từ chối thì sao?
Dialogue: 0,0:16:48.45,0:16:52.37,Main,,0,0,0,,Nếu vậy thì ta đâu thể nói gì.
Dialogue: 0,0:16:52.37,0:16:54.87,Main,,0,0,0,,Đâu có nhiều người
Dialogue: 0,0:16:55.41,0:16:58.58,Main,,0,0,0,,có thể trái lời ngài,\Nkhi ngài ở trên vị trí cao như vậy.
Dialogue: 0,0:16:59.12,0:17:02.59,Main,,0,0,0,,{\i1}Mình biết mà.{\i}\N{\i1}Hắn đã biết danh phận thực sự của mình.{\i}
Dialogue: 0,0:17:02.59,0:17:07.55,Main,,0,0,0,,Nhưng vấn đề nằm ở chỗ con bé nghĩ gì.
Dialogue: 0,0:17:09.84,0:17:12.22,Main,,0,0,0,,{\i1}Mình ghét việc này.{\i}
Dialogue: 0,0:17:12.22,0:17:14.76,Main,,0,0,0,,{\i1}Tóm lại là như vậy.{\i}
Dialogue: 0,0:17:16.10,0:17:17.81,Main,,0,0,0,,{\i1}Mình không muốn chấp nhận.{\i}
Dialogue: 0,0:17:18.89,0:17:23.22,Main,,0,0,0,,{\i1}Nhưng La Hán là cha đẻ của Miêu Miêu.{\i}
Dialogue: 0,0:17:30.86,0:17:36.08,Main,,0,0,0,,Ngài có thể nhắn với con bé\Nrằng tôi sẽ sớm đến gặp nó không?
Dialogue: 0,0:17:36.58,0:17:37.99,Main,,0,0,0,,Xin cáo từ.
Dialogue: 0,0:17:46.84,0:17:49.34,Main,,0,0,0,,- Dược sư.\N- Vâng.
Dialogue: 0,0:17:50.09,0:17:53.47,Main,,0,0,0,,Có một vị quan muốn gặp ngươi.
Dialogue: 0,0:17:54.05,0:17:55.31,Main,,0,0,0,,Ai vậy ạ?
Dialogue: 0,0:17:56.01,0:17:58.52,Main,,0,0,0,,Là kẻ quái dị ta nhắc tới lần trước.
Dialogue: 0,0:17:58.52,0:18:00.27,Main,,0,0,0,,Tên là La Hán.
Dialogue: 0,0:18:06.86,0:18:08.89,Main,,0,0,0,,Ta sẽ từ chối ông ta.
Dialogue: 0,0:18:09.24,0:18:11.32,Main,,0,0,0,,Đa tạ ngài.
Dialogue: 0,0:18:11.32,0:18:14.12,Main,,0,0,0,,Vậy nô tì xin phép trở lại làm việc.
Dialogue: 0,0:18:17.79,0:18:20.12,Main,,0,0,0,,{\i1}Mình chưa bao giờ thấy dáng vẻ đó.{\i}
Dialogue: 0,0:18:21.41,0:18:24.83,Main,,0,0,0,,{\i1}Mình cũng không muốn{\i}\N{\i1}nhìn thấy dáng vẻ đó thêm lần nào nữa.{\i}
Dialogue: 0,0:18:25.42,0:18:28.88,Main,,0,0,0,,{\i1}Vậy là ông ta biết rồi sao?{\i}
Dialogue: 0,0:18:45.44,0:18:48.86,Main,,0,0,0,,Mùi hương này…\NMột khu vườn trồng đầy dược liệu!
Dialogue: 0,0:18:48.86,0:18:51.86,Main,,0,0,0,,Ở đây, đây, và cả đây nữa!
Dialogue: 0,0:18:53.61,0:18:56.41,Main,,0,0,0,,Lại là ngươi à?
Dialogue: 0,0:19:00.08,0:19:03.29,Main,,0,0,0,,{\i1}Thôi xong.{\i}\N{\i1}Lần này trông mình khả nghi quá.{\i}
Dialogue: 0,0:19:03.75,0:19:06.79,Main,,0,0,0,,Đừng lo. Tôi vẫn chưa lấy gì cả.
Dialogue: 0,0:19:06.79,0:19:08.55,Main,,0,0,0,,Trên tay ngươi có vết bẩn.
Dialogue: 0,0:19:08.55,0:19:12.37,Main,,0,0,0,,Ta có thể hiểu là ngươi\Nđang định lấy dược liệu ở đây không?
Dialogue: 0,0:19:16.34,0:19:18.71,Main,,0,0,0,,Không sao đâu.
Dialogue: 0,0:19:19.51,0:19:21.77,Main,,0,0,0,,Khu vườn này không thuộc về ai.
Dialogue: 0,0:19:21.77,0:19:24.69,Main,,0,0,0,,Nhưng mấy thái y cũng biết chỗ này.
Dialogue: 0,0:19:24.69,0:19:26.86,Main,,0,0,0,,Ngươi không nên đến đây quá nhiều.
Dialogue: 0,0:19:27.81,0:19:30.32,Main,,0,0,0,,Cô được giao trông coi nơi này sao?
Dialogue: 0,0:19:30.32,0:19:31.73,Main,,0,0,0,,Không hẳn.
Dialogue: 0,0:19:31.73,0:19:35.11,Main,,0,0,0,,Ta chỉ trồng những gì ta muốn ở đây thôi.
Dialogue: 0,0:19:35.86,0:19:38.58,Main,,0,0,0,,{\i1}Cô ta đang lựa cỏ để hái.{\i}
Dialogue: 0,0:19:39.41,0:19:42.33,Main,,0,0,0,,{\i1}Mình nghe họ gọi cô ấy là Thúy Linh.{\i}
Dialogue: 0,0:19:42.79,0:19:45.08,Main,,0,0,0,,{\i1}Không thể trông mặt bắt hình dong,{\i}
Dialogue: 0,0:19:45.08,0:19:48.71,Main,,0,0,0,,{\i1}nhưng cô ấy có vẻ{\i}\N{\i1}không phải kiểu người nhiệt huyết.{\i}
Dialogue: 0,0:19:49.34,0:19:51.62,Main,,0,0,0,,Cô trồng gì ở đây vậy?
Dialogue: 0,0:19:56.63,0:19:58.72,Main,,0,0,0,,Thuốc cải tử hoàn sinh.
Dialogue: 0,0:19:59.64,0:20:01.22,Main,,0,0,0,,Ý cô là…
Dialogue: 0,0:20:01.22,0:20:03.68,Main,,0,0,0,,{\i1}Loại thuốc có thể{\i}\N{\i1}giúp người chết sống lại sao.{\i}
Dialogue: 0,0:20:04.43,0:20:07.19,Main,,0,0,0,,{\an8\i1}Nếu có thứ như vậy tồn tại,{\i}
Dialogue: 0,0:20:07.19,0:20:09.44,Main,,0,0,0,,{\an8\i1}mình muốn có nó hơn bất cứ thứ gì khác!{\i}
Dialogue: 0,0:20:10.11,0:20:11.93,Main,,0,0,0,,Ta đùa thôi.
Dialogue: 0,0:20:12.69,0:20:13.99,Main,,0,0,0,,Đùa sao?
Dialogue: 0,0:20:13.99,0:20:16.95,Main,,0,0,0,,Ta nghe nói ngươi là một dược sư.
Dialogue: 0,0:20:16.95,0:20:19.70,Main,,0,0,0,,Ngươi biết nhiều đến đâu?
Dialogue: 0,0:20:21.02,0:20:22.27,Main,,0,0,0,,Không chắc.
Dialogue: 0,0:20:27.67,0:20:30.25,Main,,0,0,0,,Trong thời gian tới,
