Dialogue: 0,0:01:33.49,0:01:35.99,Main,,0,0,0,,{\i1}Thời điểm những nụ xuân đầu tiên đâm chồi,{\i}
Dialogue: 0,0:01:36.49,0:01:40.00,Main,,0,0,0,,{\i1}việc Ngọc Diệp nương nương mang bầu đã được xác định chắc chắn.{\i}
Dialogue: 0,0:01:46.17,0:01:49.42,Main,,0,0,0,,{\i1}Lạ ghê. Công chúa biết được\N có em bé trong bụng mẹ sao?{\i}
Dialogue: 0,0:01:54.72,0:01:56.89,Main,,0,0,0,,{\an8}Dễ thương quá!
Dialogue: 0,0:01:56.89,0:01:59.34,Main,,0,0,0,,{\an8}Mình cũng nên tính việc thành thân thôi…
Dialogue: 0,0:02:03.48,0:02:07.32,Main,,0,0,0,,{\i1}Dù tỉ ấy có được ai ngỏ lời \Nthì họ cũng sẽ cố gắng ngăn cản việc đó.{\i}
Dialogue: 0,0:02:08.32,0:02:11.15,Main,,0,0,0,,{\i1}Thạo việc quá cũng phiền phức vậy đó.{\i}
Dialogue: 0,0:02:16.24,0:02:18.70,Main,,0,0,0,,{\i1}Khi mà mỗi ngày đều bận rộn,{\i}
Dialogue: 0,0:02:18.70,0:02:20.91,Main,,0,0,0,,{\i1}thì thời gian trôi thật nhanh.{\i}
Dialogue: 0,0:02:20.91,0:02:25.67,Main,,0,0,0,,{\i1}Trong khi hai tháng ở chỗ Nhâm Thị đại nhân\Ncó cảm giác dài như vô tận vậy.{\i}
Dialogue: 0,0:02:30.46,0:02:31.92,Main,,0,0,0,,Người muốn vẽ tranh tiếp sao?
Dialogue: 0,0:02:32.76,0:02:33.68,Main,,0,0,0,,Dạ!
Dialogue: 0,0:02:39.14,0:02:42.51,Main,,0,0,0,,Đây là nấm sữa lông nhung.\NMột loại nấm độc.
Dialogue: 0,0:02:43.23,0:02:45.14,Main,,0,0,0,,Vẽ mấy loại hoa bình thường đi.
Dialogue: 0,0:02:46.23,0:02:48.06,Main,,0,0,0,,{\i1}Hoa bình thường sao?{\i}
Dialogue: 0,0:02:48.61,0:02:49.57,Main,,0,0,0,,Trời…
Dialogue: 0,0:02:50.82,0:02:52.32,Main,,0,700,0,,Hoa hồng xanh?
Dialogue: 0,0:02:52.32,0:02:55.57,Main,,0,700,0,,Phải. Ngài không biết sao?
Dialogue: 0,0:02:56.45,0:02:59.33,Main,,0,0,0,,Cánh hoa màu xanh giúp kích thích thị giác.
Dialogue: 0,0:02:59.33,0:03:01.46,Main,,0,0,0,,Trông chúng đẹp lắm.
Dialogue: 0,0:03:01.87,0:03:05.29,Main,,0,0,0,,Chúng từng được\Ntrang trí khắp trong hoàng cung.
Dialogue: 0,0:03:05.92,0:03:07.75,Main,,0,0,0,,Không phải ngài nằm mơ đó chứ.
Dialogue: 0,0:03:07.75,0:03:10.41,Main,,0,0,0,,Làm gì có loài hoa hồng xanh nào.
Dialogue: 0,0:03:11.71,0:03:14.25,Main,,0,0,0,,Vậy mà lại có đó.
Dialogue: 0,0:03:16.01,0:03:19.23,Main,,0,0,0,,Ta rất mong được chiêm ngưỡng một lần nữa.
Dialogue: 0,0:03:19.72,0:03:22.85,Main,,0,0,0,,Ngài thấy sao?\NNgài tìm loại hoa ấy được không?
Dialogue: 0,0:03:23.52,0:03:27.43,Main,,0,0,0,,Ta nghĩ không có chuyện gì\Nmà ngài không làm được.
Dialogue: 0,0:03:27.98,0:03:29.02,Main,,0,0,0,,Ta hiểu rồi.
Dialogue: 0,0:03:29.02,0:03:33.28,Main,,0,0,0,,Nếu hoa hồng xanh có thật thì\Nta rất mong được tận mắt ngắm nhìn.
Dialogue: 0,0:03:33.28,0:03:34.61,Main,,0,0,0,,Quyết định thế nhé.
Dialogue: 0,0:03:35.11,0:03:37.82,Main,,0,0,0,,Ta thực sự mong chờ lắm đó.
Dialogue: 0,0:03:38.82,0:03:40.33,Main,,0,0,0,,Vậy ta xin phép.
Dialogue: 0,0:03:44.58,0:03:46.83,Main,,0,0,0,,Hẹn gặp lại ngài\Ntại buổi yến tiệc tháng sau.
Dialogue: 0,0:03:50.13,0:03:52.09,Main,,0,0,0,,Ngài vốn đã bận đủ thứ chuyện.
Dialogue: 0,0:03:52.09,0:03:55.96,Main,,0,0,0,,- Có nhất thiết phải nhận vụ này không?\N- Đừng nói nữa mà.
Dialogue: 0,0:03:55.96,0:03:58.84,Main,,0,0,0,,Trước tiên cứ hỏi thử\Ncác hàng hoa trong cả nước xem.
Dialogue: 0,0:04:04.68,0:04:09.31,Main,,0,0,0,,Các tiệm hoa đều nói rằng\Ngiờ đã hết mùa hoa hồng nở rồi.
Dialogue: 0,0:04:12.90,0:04:15.15,Main,,0,0,0,,Xin lỗi vì bất ngờ gọi ngươi đến như này.
Dialogue: 0,0:04:16.65,0:04:21.24,Main,,0,0,0,,Sắp tới ta sẽ cùng vài người\Nngắm hoa hồng xanh.
Dialogue: 0,0:04:21.74,0:04:23.45,Main,,0,0,0,,Hoa hồng xanh ạ?
Dialogue: 0,0:04:23.45,0:04:25.83,Main,,0,0,0,,Nhưng nô tì là dược sư mà.
Dialogue: 0,0:04:25.83,0:04:27.62,Main,,0,0,0,,Ừ, ta biết chứ.
Dialogue: 0,0:04:28.62,0:04:32.59,Main,,0,0,0,,{\i1}Anh ta gặp rắc rối gì sao? \NTrông có vẻ mệt mỏi.{\i}
Dialogue: 0,0:04:33.38,0:04:34.65,Main,,0,0,0,,{\i1}Hoa hồng hả?{\i}
Dialogue: 0,0:04:34.92,0:04:37.22,Main,,0,0,0,,{\i1}Mình có biết chút ít, nhưng mà…{\i}
Dialogue: 0,0:04:38.34,0:04:40.47,Main,,0,0,0,,{\i1}Mình từng làm mấy thứ từ hoa hồng{\i}
Dialogue: 0,0:04:40.47,0:04:43.22,Main,,0,0,0,,{\i1}để kiếm tiền tiêu vặt từ các kỹ nữ. \NTuy nhiên…{\i}
Dialogue: 0,0:04:44.39,0:04:46.72,Main,,0,0,0,,Ông ta thật sự\Ntừng nhìn thấy hoa hồng xanh ạ?
Dialogue: 0,0:04:46.95,0:04:47.84,Main,,0,0,0,,Phải.
Dialogue: 0,0:04:50.06,0:04:52.11,Main,,0,0,0,,Không phải do mấy chất gây ảo giác chứ?
Dialogue: 0,0:04:52.11,0:04:54.61,Main,,0,0,0,,Nếu thứ đó được lưu hành\Nthì triều đại này sẽ sụp đổ mất!
Dialogue: 0,0:04:54.89,0:04:56.36,Main,,0,0,0,,Nhâm Thị đại nhân.
Dialogue: 0,0:04:59.45,0:05:00.57,Main,,0,0,0,,Vậy là không thể sao?
Dialogue: 0,0:05:04.70,0:05:07.04,Main,,0,0,0,,Chính xác thì ngài cần gì ạ?
Dialogue: 0,0:05:07.83,0:05:10.21,Main,,0,0,0,,Liệu ngươi có làm kịp\Ncho buổi yến tiệc tháng sau không?
Dialogue: 0,0:05:10.75,0:05:12.00,Main,,0,0,0,,Tháng sau ạ?
Dialogue: 0,0:05:12.00,0:05:15.62,Main,,0,0,0,,Sớm cũng phải hai tháng nữa\Nhoa hồng mới nở.
Dialogue: 0,0:05:16.05,0:05:17.05,Main,,0,0,0,,Ngươi nói đúng.
Dialogue: 0,0:05:18.34,0:05:20.75,Main,,0,0,0,,Ta sẽ nói với ông ta là không thể.
Dialogue: 0,0:05:22.43,0:05:24.64,Main,,0,0,0,,{\i1}Biểu cảm này của Nhâm Thị đại nhân.{\i}
Dialogue: 0,0:05:24.64,0:05:28.43,Main,,0,0,0,,{\i1}Nhiệm vụ gần như không thể \Nvà chiến thuật thúc ép kiểu này…{\i}
Dialogue: 0,0:05:29.06,0:05:33.44,Main,,0,0,0,,Có phải yêu cầu này đến từ\Nviên quan nào đó của bộ Binh không?
Dialogue: 0,0:05:35.61,0:05:36.40,Main,,0,0,0,,Ờ.
Dialogue: 0,0:05:37.15,0:05:39.90,Main,,0,0,0,,Nô tì hiểu rồi. \NNô tì sẽ nhận việc này.
Dialogue: 0,0:05:40.57,0:05:41.56,Main,,0,0,0,,Được không đó?
Dialogue: 0,0:05:41.78,0:05:44.57,Main,,0,0,0,,Nô tì không chắc là mình làm được,\Nnhưng nô tì sẽ cố hết sức mình.
Dialogue: 0,0:05:45.66,0:05:48.04,Main,,0,0,0,,{\i1}Mình không muốn trốn chạy khỏi lão ta mãi.{\i}
Dialogue: 0,0:05:51.01,0:05:54.75,Main,,0,0,0,,{\i1}Mình chỉ muốn tẩn vào \Ncái bản mặt vênh váo đó của lão.{\i}
Dialogue: 0,0:05:56.25,0:05:57.25,Main,,0,0,0,,Nhâm Thị đại nhân.
Dialogue: 0,0:05:57.96,0:06:00.50,Main,,0,0,0,,Nô tì muốn hỏi xin vài thứ được không ạ?
Dialogue: 0,0:06:01.84,0:06:05.14,Main,,0,0,0,,Đa tạ người đã cho phép nô tì dùng chúng,
Dialogue: 0,0:06:05.80,0:06:08.39,Main,,0,0,0,,- thưa Lê Hoa nương nương.\N- Có gì to tát đâu.
Dialogue: 0,0:06:08.39,0:06:11.35,Main,,0,0,0,,Đó vốn là thứ do ngươi làm ra mà.
Dialogue: 0,0:06:12.94,0:06:14.35,Main,,0,0,0,,{\i1}Hoài niệm thật đó.{\i}
Dialogue: 0,0:06:15.06,0:06:18.19,Main,,0,0,0,,{\i1}Mình đã đề nghị xây một phòng tắm hơi{\i}
Dialogue: 0,0:06:18.19,0:06:20.28,Main,,0,0,0,,{\i1}để giúp Lê Hoa Phi hồi phục sau khi trúng độc.{\i}
Dialogue: 0,0:06:20.82,0:06:23.07,Main,,0,0,0,,{\i1}Mình đang mượn phòng tắm đó cho việc lần này,{\i}
Dialogue: 0,0:06:23.07,0:06:25.28,Main,,0,0,0,,{\i1}nhưng nhờ vả mà đến tay không\N thì không hay.{\i}
Dialogue: 0,0:06:25.28,0:06:28.60,Main,,0,0,0,,Đây là thứ mà Hoàng thượng thích ạ.
Dialogue: 0,0:06:29.37,0:06:31.37,Main,,0,0,0,,Cảm ơn ngươi. \NThứ này có ích lắm đó.
Dialogue: 0,0:06:33.04,0:06:35.88,Main,,0,0,0,,{\i1}May mà mình nhờ kỹ viện \Ngửi nó cho mình.{\i}
Dialogue: 0,0:06:40.76,0:06:42.80,Main,,0,0,0,,- Giao cho các ngươi chỗ đó nhé!\N- Vâng!
Dialogue: 0,0:06:43.38,0:06:44.58,Main,,0,0,0,,Nhâm Thị đại nhân.
Dialogue: 0,0:06:44.93,0:06:46.47,Main,,0,0,0,,Ồ, ngươi đến rồi à.
Dialogue: 0,0:06:46.47,0:06:50.01,Main,,0,0,0,,Ta đã cho họ làm như ngươi bảo,\Nmà để làm gì vậy?
Dialogue: 0,0:06:51.10,0:06:52.68,Main,,0,0,0,,Nô tì sẽ đánh lừa hoa hồng?
Dialogue: 0,0:06:52.98,0:06:54.44,Main,,0,0,0,,Đánh lừa hoa hồng?
Dialogue: 0,0:06:54.98,0:06:56.69,Main,,0,0,0,,Dược sư, ý là sao?
Dialogue: 0,0:07:03.78,0:07:05.15,Main,,0,0,0,,Nô tì sẽ để nắng rọi vào nhiều hơn,
Dialogue: 0,0:07:05.15,0:07:07.74,Main,,0,0,0,,và đẩy thêm hơi nước\Ntừ phòng tắm hơi vào đây.
Dialogue: 0,0:07:09.76,0:07:12.57,Main,,0,0,0,,Chúng ta sẽ trồng hoa hồng\Ntrong một căn phòng ấm áp.
Dialogue: 0,0:07:13.04,0:07:16.88,Main,,0,0,0,,Làm vậy thì có lẽ hoa sẽ nở trước mùa.
Dialogue: 0,0:07:17.75,0:07:20.21,Main,,0,0,0,,Thì ra đây là ý của ngươi\Nkhi bảo đánh lừa hoa hồng.
Dialogue: 0,0:07:20.21,0:07:22.21,Main,,0,0,0,,Nhưng nô tì không chắc\Nlà có tác dụng không.
Dialogue: 0,0:07:33.98,0:07:36.02,Main,,0,0,0,,Miêu Miêu!
Dialogue: 0,0:07:36.02,0:07:38.98,Main,,0,0,0,,- Tiểu Lan?\N- Muội sẽ phụ tỷ.
Dialogue: 0,0:07:39.69,0:07:41.85,Main,,0,0,0,,Vết thương ở chân tỷ có sao không?
Dialogue: 0,0:07:43.53,0:07:45.40,Main,,0,0,0,,{\i1}Cử người đến trông chừng mình sao?{\i}
Dialogue: 0,0:07:48.28,0:07:50.16,Main,,0,0,0,,{\i1}Họ cứ liên tục bảo mình{\i}
Dialogue: 0,0:07:50.70,0:07:52.87,Main,,0,0,0,,{\i1}đừng có gắng sức quá.{\i}
Dialogue: 0,0:07:53.17,0:07:55.50,Main,,0,0,0,,Không sao.\NPhiền muội phải tới phụ rồi.
Dialogue: 0,0:07:55.50,0:07:57.87,Main,,0,0,0,,Đâu có gì. Lâu rồi\Nmình mới được làm việc cùng nhau!
Dialogue: 0,0:08:00.46,0:08:01.63,Main,,0,0,0,,Đúng vậy.
Dialogue: 0,0:08:05.67,0:08:07.88,Main,,0,0,0,,{\i1}Họ chuyển vào hơn 100 chậu hoa hồng.{\i}
Dialogue: 0,0:08:11.30,0:08:13.55,Main,,0,0,0,,Đây là chậu cuối cùng.
Dialogue: 0,0:08:14.35,0:08:16.77,Main,,0,0,0,,Chà, nhiều quá nè!
Dialogue: 0,0:08:17.10,0:08:18.98,Main,,0,0,0,,{\i1}Có nhiều giống hoa hồng ở đây,{\i}
Dialogue: 0,0:08:18.98,0:08:21.36,Main,,0,0,0,,{\i1}và có những loại thường nở sớm trong năm.{\i}
Dialogue: 0,0:08:21.36,0:08:22.65,Main,,0,0,0,,Liệu có nở hết không nhỉ?
Dialogue: 0,0:08:23.40,0:08:25.65,Main,,0,0,0,,Cũng mong vậy lắm.
Dialogue: 0,0:08:38.14,0:08:40.92,Main,,0,0,0,,{\i1}Chúng tôi chú trọng việc ổn định nhiệt độ.{\i}
Dialogue: 0,0:08:41.92,0:08:44.55,Main,,0,0,0,,{\i1}Một số người đã được cử đến để phụ giúp,{\i}
Dialogue: 0,0:08:44.55,0:08:47.46,Main,,0,0,0,,{\i1}nhưng những việc này \Nkhó mà giao cho người khác làm.{\i}
Dialogue: 0,0:08:48.30,0:08:49.51,Main,,0,0,0,,{\i1}Chỉ cần một sơ suất{\i}
Dialogue: 0,0:08:49.51,0:08:52.17,Main,,0,0,0,,{\i1}cũng khiến hoa chết hết, \Nrồi tất cả sẽ thành công cốc.{\i}
Dialogue: 0,0:08:56.93,0:09:00.60,Main,,0,0,0,,{\i1}Vào ngày nắng, mang hoa ra ngoài \Nđể chúng hấp thụ ánh mặt trời.{\i}
Dialogue: 0,0:09:02.44,0:09:04.69,Main,,0,0,0,,Có vẻ chúng thích nắng lắm nè!
Dialogue: 0,0:09:05.32,0:09:06.16,Main,,0,0,0,,Ừ.
Dialogue: 0,0:09:06.57,0:09:08.23,Main,,0,0,0,,Tình hình thế nào rồi?
Dialogue: 0,0:09:09.40,0:09:10.94,Main,,0,0,0,,Tôi mang điểm tâm đến.
Dialogue: 0,0:09:14.70,0:09:16.45,Main,,0,0,0,,Đa tạ ngài.
Dialogue: 0,0:09:17.37,0:09:20.46,Main,,0,0,0,,Muội vừa được trốn việc\N lại còn được ăn nữa,
Dialogue: 0,0:09:20.46,0:09:21.95,Main,,0,0,0,,đúng là tuyệt vời!
Dialogue: 0,0:09:22.46,0:09:24.87,Main,,0,0,0,,Đây cũng là công việc mà.
Dialogue: 0,0:09:27.42,0:09:29.13,Main,,0,0,0,,Sao thế nhỉ?
Dialogue: 0,0:09:29.13,0:09:31.30,Main,,0,0,0,,Không biết nữa. Có lẽ họ tò mò.
Dialogue: 0,0:09:32.34,0:09:34.47,Main,,0,0,0,,{\i1}Hay họ đang muốn thấy\N thứ gì đó đáng sợ chăng?{\i}
Dialogue: 0,0:09:38.10,0:09:39.81,Main,,0,0,0,,Tiếp theo, chúng ta nên làm gì?
Dialogue: 0,0:09:40.52,0:09:42.27,Main,,0,0,0,,Nếu cây non nào ra quá nhiều nụ,
Dialogue: 0,0:09:42.27,0:09:43.65,Main,,0,0,0,,thì ngắt tỉa bớt đi nhé?
Dialogue: 0,0:09:44.40,0:09:47.36,Main,,0,0,0,,Làm vậy khiến dinh dưỡng tụ về một mối,\Ngiúp hoa dễ nở hơn
Dialogue: 0,0:09:47.36,0:09:49.48,Main,,0,0,0,,và tránh được bệnh dịch.
Dialogue: 0,0:09:55.28,0:09:57.05,Main,,0,0,0,,Không sao đâu mà!
Dialogue: 0,0:10:01.33,0:10:03.25,Main,,0,0,0,,- Cảm ơn cô rất nhiều!\N- Không có gì!
Dialogue: 0,0:10:06.85,0:10:08.30,Main,,0,0,0,,Nhanh lên nào!
Dialogue: 0,0:10:16.18,0:10:19.31,Main,,0,0,0,,Vẫn chưa ra nụ.
Dialogue: 0,0:10:24.98,0:10:26.48,Main,,0,0,0,,{\i1}Vào những ngày lạnh,{\i}
Dialogue: 0,0:10:31.99,0:10:33.82,Main,,0,0,0,,{\i1}chúng tôi giữ ấm cho nhà kho cả đêm.{\i}
Dialogue: 0,0:10:41.08,0:10:43.45,Main,,0,0,0,,{\i1}Không thể biết trước thời tiết thế nào.{\i}
Dialogue: 0,0:10:55.80,0:10:57.88,Main,,0,0,0,,Hôm qua tỷ lại không ngủ chút nào à?
Dialogue: 0,0:10:58.43,0:11:00.60,Main,,0,0,0,,Có ngủ lúc rạng sáng.
Dialogue: 0,0:11:00.60,0:11:02.81,Main,,0,0,0,,Rạng sáng là mới ban nãy thôi mà!
Dialogue: 0,0:11:02.81,0:11:06.47,Main,,0,0,0,,Muội sẽ làm những việc có thể,\Nnên tỷ cứ đi chợp mắt chút đi.
Dialogue: 0,0:11:06.47,0:11:08.44,Main,,0,0,0,,Phải để mắt đến chỗ hoa này.
Dialogue: 0,0:11:08.94,0:11:09.90,Main,,0,0,0,,Gì vậy?
Dialogue: 0,0:11:10.61,0:11:12.56,Main,,0,0,0,,Họ lại nhìn về phía này rồi.
Dialogue: 0,0:11:13.61,0:11:16.98,Main,,0,0,0,,{\i1}Họ làm vậy mỗi ngày \Nmà không thấy chán sao?{\i}
Dialogue: 0,0:11:16.98,0:11:18.78,Main,,0,0,0,,{\i1}Cứ làm người ta phân tâm.{\i}
Dialogue: 0,0:11:19.41,0:11:22.04,Main,,0,0,0,,{\i1}Giá mà mình có thể chuyển hướng chú ý của họ…{\i}
Dialogue: 0,0:11:27.12,0:11:28.75,Main,,0,0,0,,Đẹp quá!
Dialogue: 0,0:11:28.75,0:11:31.71,Main,,0,0,0,,Móng tay đỏ hóa ra là như này!
Dialogue: 0,0:11:31.71,0:11:34.34,Main,,0,0,0,,Mọi người ở phố đèn đỏ đều làm trò này.
Dialogue: 0,0:11:34.34,0:11:36.22,Main,,0,0,0,,Trông đẹp quá nhỉ!
Dialogue: 0,0:11:47.60,0:11:49.23,Main,,0,0,0,,Miêu Miêu có làm không?
Dialogue: 0,0:11:49.73,0:11:51.09,Main,,0,0,0,,Dễ thương quá!
Dialogue: 0,0:11:51.56,0:11:54.10,Main,,0,0,0,,Dạo này nó phổ biến lắm đó.
Dialogue: 0,0:11:54.44,0:11:55.65,Main,,0,0,0,,Đúng vậy ạ.
Dialogue: 0,0:11:57.78,0:12:00.60,Main,,0,0,0,,{\i1}Các phi tần thượng cấp \Nđược Hoàng thượng sủng ái{\i}
Dialogue: 0,0:12:00.60,0:12:02.87,Main,,0,0,0,,{\i1}là những người tạo ra xu hướng.{\i}
Dialogue: 0,0:12:08.29,0:12:09.91,Main,,0,0,0,,Làm thế thì khó làm việc lắm.
Dialogue: 0,0:12:12.25,0:12:15.13,Main,,0,0,0,,{\i1}Thì ra Hồng Nương chú trọng công việc\N hơn là diện mạo.{\i}
Dialogue: 0,0:12:17.05,0:12:20.72,Main,,0,0,0,,Nô tì đã thử độc xong rồi ạ.\NNô tì xin phép trở lại Thủy Tinh Cung.
Dialogue: 0,0:12:20.72,0:12:22.01,Main,,0,0,0,,Sớm vậy sao?
Dialogue: 0,0:12:22.01,0:12:24.51,Main,,0,0,0,,Cũng sắp đến yến tiệc rồi ạ.
Dialogue: 0,0:12:24.85,0:12:26.13,Main,,0,0,0,,Cũng phải.
Dialogue: 0,0:12:26.55,0:12:28.35,Main,,0,0,0,,À, phải rồi.
Dialogue: 0,0:12:28.35,0:12:31.69,Main,,0,0,0,,Ngọc Diệp nương nương\Nsẽ không tham dự tiệc lần này.
Dialogue: 0,0:12:31.69,0:12:35.03,Main,,0,0,0,,Nương nương sẽ nhường chỗ\Nđể Lâu Lan nương nương ra mắt ở bữa tiệc.
Dialogue: 0,0:12:35.69,0:12:38.15,Main,,0,0,0,,{\i1}Để giấu việc nương nương mang bầu sao.{\i}
Dialogue: 0,0:12:38.15,0:12:40.90,Main,,0,0,0,,Nô tì hiểu rồi ạ. \NVậy nô tì xin phép.
Dialogue: 0,0:12:40.90,0:12:43.83,Main,,0,0,0,,Nè, muội ở bên Thủy Tinh Cung\Ncó ổn không đó?
Dialogue: 0,0:12:43.83,0:12:46.50,Main,,0,0,0,,Càng ngày muội càng gầy đi rồi!
Dialogue: 0,0:12:46.50,0:12:48.12,Main,,0,0,0,,Đừng gắng sức quá nhé!
Dialogue: 0,0:12:48.96,0:12:50.63,Main,,0,0,0,,Đa tạ các tỉ.
Dialogue: 0,0:13:01.72,0:13:02.93,Main,,0,0,0,,Miêu Miêu!
Dialogue: 0,0:13:04.18,0:13:06.02,Main,,0,0,0,,Miêu Miêu, nhanh lên!
Dialogue: 0,0:13:11.31,0:13:12.81,Main,,0,0,0,,Cây trổ nụ rồi.
Dialogue: 0,0:13:12.81,0:13:14.32,Main,,0,0,0,,Muội vừa mới thấy đó.
Dialogue: 0,0:13:15.07,0:13:17.32,Main,,0,0,0,,Bông đầu tiên của chúng ta!
Dialogue: 0,0:13:18.53,0:13:20.61,Main,,0,0,0,,{\i1}Nếu mọi thứ diễn ra theo kế hoạch,{\i}
Dialogue: 0,0:13:20.61,0:13:23.49,Main,,0,0,0,,{\i1}có lẽ chúng sắp sửa nở rồi…{\i}
Dialogue: 0,0:13:23.78,0:13:28.09,Main,,0,0,0,,Miêu Miêu?
Dialogue: 0,0:13:36.80,0:13:38.38,Main,,0,0,0,,Có tin gì từ dược sư không?
Dialogue: 0,0:13:38.58,0:13:40.63,Main,,0,0,0,,Không ạ.
Dialogue: 0,0:13:40.63,0:13:43.29,Main,,0,0,0,,Mấy hôm rồi không ghé qua đó.
Dialogue: 0,0:13:43.64,0:13:46.64,Main,,0,0,0,,Chúng ta đều đang bận\Nchuẩn bị cho buổi yến tiệc.
Dialogue: 0,0:13:50.64,0:13:51.89,Main,,0,0,0,,Nhâm Thị đại nhân.
Dialogue: 0,0:14:21.17,0:14:24.68,Main,,0,0,0,,Đó hẳn là tiểu nữ nhà đại nhân Tử Xương,\NLâu Lan nương nương.
Dialogue: 0,0:14:29.31,0:14:31.23,Main,,0,0,0,,Quyến rũ quá!
Dialogue: 0,0:14:44.24,0:14:45.70,Main,,0,0,0,,Nói đến Lâu Lan nương nương.
Dialogue: 0,0:14:49.24,0:14:52.28,Main,,0,0,0,,Nếu con bé có thiếu sót ở đâu,
Dialogue: 0,0:14:54.00,0:14:56.17,Main,,0,0,0,,thì xin hãy cho chúng tôi biết.
Dialogue: 0,0:14:59.96,0:15:02.71,Main,,0,0,0,,- Nào có đâu.\N- Thôi nào.
Dialogue: 0,0:15:14.39,0:15:16.77,Main,,0,0,0,,- Hoa hồng xanh?\N- Là thật sao?
Dialogue: 0,0:15:22.53,0:15:23.86,Main,,0,0,0,,Có lẽ mọi người sẽ muốn
Dialogue: 0,0:15:25.20,0:15:28.28,Main,,0,0,0,,ngắm nhìn những nụ hoa này\Nvà tưởng tượng xem khi nở
Dialogue: 0,0:15:28.28,0:15:29.37,Main,,0,0,0,,chúng trông ra sao.
Dialogue: 0,0:15:30.49,0:15:33.53,Main,,0,0,0,,Ừ. Trông đẹp quá.
Dialogue: 0,0:15:34.96,0:15:38.42,Main,,0,0,0,,{\i1}Những ánh nhìn \Nném về người tên "Nhâm Thị" này.{\i}
Dialogue: 0,0:15:39.88,0:15:42.46,Main,,0,0,0,,{\i1}Dù diện mạo hắn có đẹp ra sao,{\i}
Dialogue: 0,0:15:42.46,0:15:46.01,Main,,0,0,0,,{\i1}không một quan chức nào\N lại vị tha đến mức thấy thoải mái khi{\i}
Dialogue: 0,0:15:46.01,0:15:47.68,Main,,0,0,0,,{\i1}nhìn một thái giám thể hiện bản lĩnh.{\i}
Dialogue: 0,0:15:50.22,0:15:51.81,Main,,0,0,0,,{\i1}Ham muốn cũng được.{\i}
Dialogue: 0,0:15:52.68,0:15:54.64,Main,,0,0,0,,{\i1}Có thể lợi dụng nó để có lợi cho mình.{\i}
Dialogue: 0,0:15:57.10,0:15:59.56,Main,,0,0,0,,{\i1}Ghen tị cũng chẳng sao. \NCàng dễ kiểm soát.{\i}
Dialogue: 0,0:16:00.15,0:16:01.57,Main,,0,0,0,,{\i1}Kẻ khó đối phó là{\i}
Dialogue: 0,0:16:02.23,0:16:04.74,Main,,0,0,0,,{\i1}những kẻ không để lộ cảm xúc\N thông qua ánh mắt.{\i}
Dialogue: 0,0:16:05.53,0:16:08.24,Main,,0,0,0,,{\i1}Tử Xương, phụ thân của Lâu Lan quý phi,{\i}
Dialogue: 0,0:16:08.24,0:16:10.40,Main,,0,0,0,,{\i1}người đàn ông được Thái hậu trọng dụng.{\i}
Dialogue: 0,0:16:11.16,0:16:14.25,Main,,0,0,0,,{\i1}Đến giờ, Hoàng thượng \Nvẫn phải dè chừng ông ta.{\i}
Dialogue: 0,0:16:14.25,0:16:17.91,Main,,0,0,0,,{\i1}Chính vì vậy nên phần mình\N vẫn cứ giữ nụ cười trên môi.{\i}
Dialogue: 0,0:16:18.75,0:16:22.00,Main,,0,0,0,,{\i1}Với lại, lúc này \Ncó một kẻ còn đáng lo hơn Tử Xương.{\i}
Dialogue: 0,0:16:22.88,0:16:25.62,Main,,0,0,0,,{\i1}Là gã đó, La Hán.{\i}
Dialogue: 0,0:16:35.18,0:16:37.26,Main,,0,0,0,,Trời ạ, khó chịu quá đi mất.
Dialogue: 0,0:16:44.19,0:16:45.73,Main,,0,0,0,,Muội tỉnh rồi sao?
Dialogue: 0,0:16:46.07,0:16:47.53,Main,,0,0,0,,Anh Hoa tỉ tỉ…
Dialogue: 0,0:16:47.53,0:16:49.99,Main,,0,0,0,,Muội đừng có tới Thủy Tinh Cung nữa.
Dialogue: 0,0:16:49.99,0:16:52.82,Main,,0,0,0,,Lần nào trở về cũng thấy\Nmuội hao gầy và kiệt sức.
Dialogue: 0,0:16:54.58,0:16:56.20,Main,,0,0,0,,Muội xin lỗi.
Dialogue: 0,0:16:56.20,0:16:57.75,Main,,0,0,0,,Ngươi tỉnh rồi à?
Dialogue: 0,0:17:01.71,0:17:03.16,Main,,0,0,0,,Nô tì xin phép cáo lui.
Dialogue: 0,0:17:05.92,0:17:07.62,Main,,0,0,0,,Cứ ngồi yên ở đó đi.
Dialogue: 0,0:17:09.26,0:17:11.09,Main,,0,0,0,,Đúng là khó thật đó ạ.
Dialogue: 0,0:17:11.09,0:17:13.18,Main,,0,0,0,,Hoa đã không nở đúng thời hạn.
Dialogue: 0,0:17:14.22,0:17:18.64,Main,,0,0,0,,Này, không phải là cô\Ncố làm ta bất ngờ đấy chứ?
Dialogue: 0,0:17:18.64,0:17:19.81,Main,,0,0,0,,Dạ?
Dialogue: 0,0:17:19.81,0:17:22.72,Main,,0,0,0,,Không có gì. \NNhư vậy là quá tốt rồi.
Dialogue: 0,0:17:24.15,0:17:25.61,Main,,0,0,0,,Rốt cuộc ngươi đã làm thế nào?
Dialogue: 0,0:17:26.32,0:17:27.79,Main,,0,0,0,,Nô tì chỉ nhuộm chúng thôi.
Dialogue: 0,0:17:28.32,0:17:30.91,Main,,0,0,0,,Nhuộm sao? \NNhưng có gì bám ở đây đâu.
Dialogue: 0,0:17:31.49,0:17:33.70,Main,,0,0,0,,Không phải nhuộm từ bên ngoài.
Dialogue: 0,0:17:33.70,0:17:35.33,Main,,0,0,0,,Là nhuộm từ bên trong ạ.
Dialogue: 0,0:17:39.12,0:17:42.50,Main,,0,0,0,,Những bông hồng này vốn dĩ có màu trắng.
Dialogue: 0,0:17:45.13,0:17:47.34,Main,,0,0,0,,Nô tì đã dùng nhiều loại nước nhuộm
Dialogue: 0,0:17:47.34,0:17:49.38,Main,,0,0,0,,để ngâm những nụ hoa trắng vào đó.
Dialogue: 0,0:17:49.38,0:17:53.51,Main,,0,0,0,,Vì vậy nên mới có nhiều màu \Nchứ không chỉ mỗi màu xanh.
Dialogue: 0,0:17:53.51,0:17:56.47,Main,,0,0,0,,Vâng. Phần lá trở nên đục và đậm màu hơn\N khi được nhuộm,
Dialogue: 0,0:17:56.47,0:17:58.89,Main,,0,0,0,,vậy nên nô tì đã ngắt hết lá trước.
Dialogue: 0,0:17:59.77,0:18:03.35,Main,,0,0,0,,Sau đó, để hoa không bị phai màu \Ntrong suốt buổi yến tiệc,
Dialogue: 0,0:18:03.35,0:18:07.40,Main,,0,0,0,,nô tì đã bọc thêm bông gòn\N có nhúng nước nhuộm, vậy là xong.
Dialogue: 0,0:18:07.40,0:18:09.11,Main,,0,0,0,,Thực ra cách làm rất đơn giản.
Dialogue: 0,0:18:09.82,0:18:11.15,Main,,0,0,0,,{\i1}Thực ra,
Dialogue: 0,0:18:11.15,0:18:15.07,Main,,0,0,0,,{\i1}phần khó nhất là khiến cho hoa \Nnở đúng thời điểm.
Dialogue: 0,0:18:15.07,0:18:17.20,Main,,0,0,0,,Đúng là rất đơn giản.
Dialogue: 0,0:18:17.20,0:18:18.54,Main,,0,0,0,,Vậy nên phòng trường hợp
Dialogue: 0,0:18:18.54,0:18:22.08,Main,,0,0,0,,có vị quan nào đó\Nphàn nàn hay muốn buộc tội gì đó,
Dialogue: 0,0:18:22.49,0:18:25.67,Main,,0,0,0,,nô tì đã tiết lộ kế này\Ncho Hoàng thượng trước.
Dialogue: 0,0:18:26.46,0:18:29.59,Main,,0,0,0,,{\i1}Khi biết được bí mật,\N Hoàng thượng có vẻ rất thích thú{\i}
Dialogue: 0,0:18:29.59,0:18:31.93,Main,,0,0,0,,{\i1}và đã lắng nghe rất chăm chú.{\i}
Dialogue: 0,0:18:32.63,0:18:36.93,Main,,0,0,0,,Thế tại sao ông ấy lại bảo rằng đã từng\Nthấy hoa hồng xanh trong cung điện?
Dialogue: 0,0:18:36.93,0:18:38.68,Main,,0,0,0,,Chắc hẳn có kẻ nào đó rảnh rỗi
Dialogue: 0,0:18:38.68,0:18:42.27,Main,,0,0,0,,mỗi ngày đều mang hoa ra\Nngâm vào nước nhuộm màu xanh.
Dialogue: 0,0:18:45.06,0:18:47.23,Main,,0,0,0,,Sao lại có người làm vậy chứ?
Dialogue: 0,0:18:48.02,0:18:49.11,Main,,0,0,0,,Nô tì không biết.
Dialogue: 0,0:18:49.11,0:18:51.99,Main,,0,0,0,,Có lẽ kẻ đó muốn dùng nó\Nđể tán tỉnh phụ nữ chăng.
Dialogue: 0,0:18:52.53,0:18:55.63,Main,,0,0,0,,Trước giờ ta chưa thấy\Nngươi nhuộm móng thế này.
Dialogue: 0,0:18:55.95,0:18:57.86,Main,,0,0,0,,Nó không hợp với nô tì.
Dialogue: 0,0:18:58.28,0:19:02.21,Main,,0,0,0,,Nếu có Phượng Tiên Hoa và chua me đất,\Nthì màu nhuộm sẽ đều hơn.
Dialogue: 0,0:19:03.54,0:19:05.96,Main,,0,0,0,,{\i1}Phượng Tiên Hoa \Nđược biết đến như "móng tay đỏ",{\i}
Dialogue: 0,0:19:05.96,0:19:08.38,Main,,0,0,0,,{\i1}còn chua me đất thì là "bàn chân mèo".{\i}
Dialogue: 0,0:19:08.38,0:19:12.17,Main,,0,0,0,,{\i1}Nếu nghiền nát hai loại này với nhau thì màu đỏ trên móng tay sẽ rực rỡ hơn.{\i}
Dialogue: 0,0:19:12.80,0:19:14.97,Main,,0,0,0,,{\i1}Dù việc nhuộm móng \Nsẽ không thay đổi điều này…{\i}
Dialogue: 0,0:19:15.84,0:19:17.97,Main,,0,0,0,,{\i1}Ít nhất thì nó trông cũng đỡ hơn.{\i}
Dialogue: 0,0:19:19.68,0:19:22.43,Main,,0,0,0,,Ngài Cao Thuận, ngài đã có\Nnhững thứ nô tì nhờ chưa ạ?
Dialogue: 0,0:19:22.43,0:19:24.80,Main,,0,0,0,,Rồi, như cô yêu cầu.
Dialogue: 0,0:19:25.23,0:19:26.98,Main,,0,0,0,,Đa tạ ngài.
Dialogue: 0,0:19:28.23,0:19:30.65,Main,,0,0,0,,{\i1}Giờ thì sân khấu đã sẵn sàng.{\i}
Dialogue: 0,0:19:31.15,0:19:32.52,Main,,0,0,0,,{\i1}Việc còn lại chỉ là{\i}
Dialogue: 0,0:19:33.19,0:19:36.99,Main,,0,0,0,,{\i1}khiến gã đê tiện đó sửng sốt.{\i}
Dialogue: 0,0:19:39.20,0:19:43.95,Main,,0,0,0,,{\i1}Không ngờ thử thách của mình\N lại kết thúc trong thất bại.{\i}
Dialogue: 0,0:19:51.88,0:19:55.80,Main,,0,0,0,,{\i1}Hầu hết mọi người trong mắt ta\N chỉ như những quân cờ vây.{\i}
Dialogue: 0,0:19:55.80,0:19:58.93,Main,,0,0,0,,{\i1}Nam là quân đen, nữ là quân trắng.{\i}
Dialogue: 0,0:19:59.43,0:20:01.60,Main,,0,0,0,,{\i1}Ngay cả người dưới trướng ta trong Bộ Binh{\i}
Dialogue: 0,0:20:01.60,0:20:04.01,Main,,0,0,0,,{\i1}cũng chỉ là những quân cờ tướng.{\i}
Dialogue: 0,0:20:04.56,0:20:07.23,Main,,0,0,0,,{\i1}Hầu hết là quân Tốt, hay Binh.{\i}
Dialogue: 0,0:20:07.23,0:20:11.32,Main,,0,0,0,,{\i1}Sau khi thăng cấp, \Nhọ trở thành quân Mã, hay Pháo.{\i}
Dialogue: 0,0:20:11.86,0:20:14.09,Main,,0,0,0,,{\i1}Làm việc trong Bộ Binh khá đơn giản.{\i}
Dialogue: 0,0:20:14.48,0:20:17.27,Main,,0,0,0,,{\i1}Chỉ cần đặt các quân cờ \Nở nơi phù hợp với chúng.{\i}
Dialogue: 0,0:20:18.24,0:20:19.57,Main,,0,0,0,,{\i1}Mỗi người một vai trò.{\i}
Dialogue: 0,0:20:19.57,0:20:22.33,Main,,0,0,0,,{\i1}Đó là cách ta thắng trận.{\i}
Dialogue: 0,0:20:23.08,0:20:24.86,Main,,0,0,0,,{\i1}Không có gì là khó cả.{\i}
Dialogue: 0,0:20:25.29,0:20:28.96,Main,,0,0,0,,{\i1}Thiếu kỹ thuật cũng không sao, \Nmiễn là các quân cờ làm tốt vai trò{\i}
Dialogue: 0,0:20:28.96,0:20:31.84,Main,,0,0,0,,{\i1}thì chúng sẽ hoàn thành \Ncông việc cho bạn.{\i}
Dialogue: 0,0:20:32.67,0:20:35.51,Main,,0,0,0,,{\i1}Hôm nay mắt ta đau nhức hơn mọi khi.{\i}
Dialogue: 0,0:20:35.51,0:20:38.26,Main,,0,0,0,,{\i1}Ta cứ liên tục bắt gặp màu đỏ \Nchập chờn trong tầm nhìn.{\i}
Dialogue: 0,0:20:40.39,0:20:42.26,Main,,0,0,0,,{\i1}Móng tay đỏ sao?{\i}
Dialogue: 0,0:20:42.97,0:20:47.47,Main,,0,0,0,,{\i1}Móng tay đỏ trong trí nhớ của ta \Nkhông lòe loẹt, khó chịu như này.{\i}
Dialogue: 0,0:20:48.27,0:20:51.86,Main,,0,0,0,,{\i1}Một màu đỏ tinh tế, \Nnhuộm từ Phượng Tiên Hoa.{\i}
Dialogue: 0,0:20:57.99,0:21:01.52,Main,sign,0,0,0,,{\an8}[TƯỢNG - SĨ]
